<idea-plugin>
    <id>com.sourceplusplus.plugin.intellij</id>
    <name>Source++</name>
    <version>0.2.4-alpha</version>
    <vendor email="support@sourceplusplus.com" url="https://sourceplusplus.com">Source++ Team</vendor>

    <description><![CDATA[
        Source++ (SourcePlusPlus) is an open-source automated programming assistant with runtime-aware and context-aware functionality.
        Source++ is a strictly observant programming assistant and aims to integrate APM solutions with the IDE for tighter feedback loops.
    ]]></description>

    <idea-version since-build="201"/>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.intellij.groovy</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="org.jetbrains.plugins.gradle">
        <taskManager implementation="com.sourceplusplus.plugin.intellij.patcher.GradleAgentPatcher"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.sourceplusplus.plugin.intellij.IntelliJStartupActivity"/>

        <codeInsight.lineMarkerProvider language="Groovy"
                                        implementationClass="com.sourceplusplus.marker.plugin.SourceLineMarkerProvider$GroovyDescriptor"/>
        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="com.sourceplusplus.marker.plugin.SourceLineMarkerProvider$JavaDescriptor"/>
        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="com.sourceplusplus.marker.plugin.SourceLineMarkerProvider$KotlinDescriptor"/>

        <projectService
                serviceImplementation="com.sourceplusplus.plugin.intellij.tool.SourcePluginConsoleService"/>
        <toolWindow id="Source++ Console" icon="/icons/s.png" anchor="bottom"
                    factoryClass="com.sourceplusplus.plugin.intellij.tool.SourcePluginToolWindowFactory"/>
        <java.programPatcher implementation="com.sourceplusplus.plugin.intellij.patcher.MavenAgentPatcher"/>
        <applicationConfigurable
                instance="com.sourceplusplus.plugin.intellij.settings.PluginSettingsConfigurable"
                groupId="Source++"
                id="Source++"
                displayName="Source++"/>
        <applicationConfigurable groupId="Source++"
                                 displayName="Manage Environments"
                                 id="Environments"
                                 instance="com.sourceplusplus.plugin.intellij.settings.connect.EnvironmentConfigurable"/>
        <applicationConfigurable groupId="Source++"
                                 displayName="About"
                                 id="About"
                                 instance="com.sourceplusplus.plugin.intellij.settings.about.AboutConfigurable"/>

        <intentionAction>
            <className>com.sourceplusplus.plugin.intellij.intention.SubscribeSourceArtifactIntention</className>
            <category>Source++ Artifact</category>
            <descriptionDirectoryName>SubscribeSourceArtifact</descriptionDirectoryName>
        </intentionAction>
        <intentionAction>
            <className>com.sourceplusplus.plugin.intellij.intention.SubscribeFileSourceArtifactsIntention</className>
            <category>Source++ Artifact</category>
            <descriptionDirectoryName>SubscribeFileSourceArtifacts</descriptionDirectoryName>
        </intentionAction>
        <intentionAction>
            <className>com.sourceplusplus.plugin.intellij.intention.UnsubscribeSourceArtifactIntention</className>
            <category>Source++ Artifact</category>
            <descriptionDirectoryName>UnsubscribeSourceArtifact</descriptionDirectoryName>
        </intentionAction>
        <intentionAction>
            <className>com.sourceplusplus.plugin.intellij.intention.UnsubscribeFileSourceArtifactsIntention</className>
            <category>Source++ Artifact</category>
            <descriptionDirectoryName>UnsubscribeFileSourceArtifacts</descriptionDirectoryName>
        </intentionAction>
    </extensions>

    <projectListeners>
        <listener class="com.sourceplusplus.marker.plugin.FileActivityListener"
                  topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </projectListeners>
</idea-plugin>