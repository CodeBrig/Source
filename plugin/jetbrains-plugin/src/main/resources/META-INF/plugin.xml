        <!--        <intentionAction>-->
        <!--            <className>com.sourceplusplus.plugin.intellij.intention.UnsubscribeSourceArtifactIntention</className>-->
        <!--            <category>Source++ Artifact</category>-->
        <!--            <descriptionDirectoryName>UnsubscribeSourceArtifact</descriptionDirectoryName>-->
        <!--        </intentionAction>-->
        <!--        <intentionAction>-->
        <!--            <className>com.sourceplusplus.plugin.intellij.intention.UnsubscribeFileSourceArtifactsIntention</className>-->
        <!--            <category>Source++ Artifact</category>-->
        <!--            <descriptionDirectoryName>UnsubscribeFileSourceArtifacts</descriptionDirectoryName>-->
        <!--        </intentionAction>-->
    </extensions>

    <projectListeners>
        <listener class="com.sourceplusplus.marker.plugin.FileActivityListener"
                  topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </projectListeners>

    <actions>
        <action id="com.sourceplusplus.marker.source.mark.SourceMarkPopupAction"
                class="com.sourceplusplus.marker.source.mark.SourceMarkPopupAction"
                text="SourceMark Popup Action" description="SourceMark popup action">
            <keyboard-shortcut first-keystroke="control shift S" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>