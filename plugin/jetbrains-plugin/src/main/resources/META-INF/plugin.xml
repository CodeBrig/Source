<idea-plugin>
    <id>com.sourceplusplus.plugin.intellij</id>
    <name>Source++</name>
    <version>0.1.2-alpha</version>
    <vendor email="support@sourceplusplus.com" url="https://sourceplusplus.com">Source++ Team</vendor>

    <description><![CDATA[
      Open-source automated programming assistant with runtime-aware and context-aware functionality
    ]]></description>

    <idea-version since-build="162"/>
    <depends>org.intellij.groovy</depends>
    <depends optional="true">org.jetbrains.kotlin</depends>

    <application-components>
        <component>
            <implementation-class>com.sourceplusplus.plugin.intellij.settings.PluginSettingsComponent
            </implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <projectService
                serviceImplementation="com.sourceplusplus.plugin.intellij.tool.SourcePluginConsoleService"/>
        <toolWindow id="Source++ Console" icon="/icons/s.png" anchor="bottom"
                    factoryClass="com.sourceplusplus.plugin.intellij.tool.SourcePluginToolWindowFactory"/>
        <postStartupActivity implementation="com.sourceplusplus.plugin.intellij.IntelliJStartupActivity"/>
        <java.programPatcher implementation="com.sourceplusplus.plugin.intellij.patcher.SourceAgentPatcher"/>
        <inspectionToolProvider
                implementation="com.sourceplusplus.plugin.intellij.inspect.IntelliJInspectionProvider"/>
        <applicationConfigurable
                instance="com.sourceplusplus.plugin.intellij.settings.PluginSettingsConfigurable"
                groupId="Source++"
                id="Source++"
                displayName="Source++"/>
        <applicationConfigurable groupId="Source++"
                                 displayName="About"
                                 id="About"
                                 instance="com.sourceplusplus.plugin.intellij.settings.about.AboutConfigurable"/>

        <codeInsight.lineMarkerProvider language=""
                                        implementationClass="com.sourceplusplus.plugin.intellij.marker.mark.gutter.provider.ActiveSourceArtifactMarkProvider"/>
        <codeInsight.lineMarkerProvider language=""
                                        implementationClass="com.sourceplusplus.plugin.intellij.marker.mark.gutter.provider.SubscribedSourceArtifactMarkProvider"/>

        <intentionAction>
            <className>com.sourceplusplus.plugin.intellij.intention.SubscribeSourceArtifactIntention</className>
            <category>Source++ Artifact</category>
            <descriptionDirectoryName>SubscribeSourceArtifact</descriptionDirectoryName>
        </intentionAction>
        <intentionAction>
            <className>com.sourceplusplus.plugin.intellij.intention.SubscribeFileSourceArtifactsIntention</className>
            <category>Source++ Artifact</category>
            <descriptionDirectoryName>SubscribeFileSourceArtifacts</descriptionDirectoryName>
        </intentionAction>
        <intentionAction>
            <className>com.sourceplusplus.plugin.intellij.intention.UnsubscribeSourceArtifactIntention</className>
            <category>Source++ Artifact</category>
            <descriptionDirectoryName>UnsubscribeSourceArtifact</descriptionDirectoryName>
        </intentionAction>
        <intentionAction>
            <className>com.sourceplusplus.plugin.intellij.intention.UnsubscribeFileSourceArtifactsIntention</className>
            <category>Source++ Artifact</category>
            <descriptionDirectoryName>UnsubscribeFileSourceArtifacts</descriptionDirectoryName>
        </intentionAction>
    </extensions>
</idea-plugin>